 <div class="form-container">
  <%= form_for(@movie) do |f| %>
  	<%= render 'shared/errors', object: @movie %>
	<div class = "form-group">
		<%= f.label :title %><br>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class = "form-group">
		<%= f.label :description %><br>
		<%= f.text_area :description, rows: 7, class: 'form-control' %>
	</div>
	<div class = "form-group short">
		<%= f.label :rating %><br>
		<%= f.select :rating, Movie::RATINGS, prompt: "Select one" %>
	</div>
	<div class = "form-group short">
		<%= f.label :released_on %><br>
		<%= f.date_field :released_on, class: 'form-control'%>
	</div>
	<div class = "form-group short">
		<%= f.label :total_gross %><br>
		<%= f.number_field :total_gross, class: 'form-control' %>
	</div>
	<div class = "form-group">
  		<%= f.label :cast %><br/>
  		<%= f.text_field :cast, class: 'form-control' %>
	</div>
	<div class = "form-group, short">
  		<%= f.label :director %><br/>
  		<%= f.text_field :director, class: 'form-control' %>
	</div>
	<div class = "form-group, short">
  		<%= f.label :duration %><br/>
  		<%= f.text_field :duration, class: 'form-control' %>
	</div>
	<div class = "form-group short">
  		<%= f.label :image_file_name %><br/>
  		<%= f.text_field :image_file_name, placeholder: 'GIF, JPG, PNG Only', class: 'form-control'  %>
	</div>

	<%= f.submit 'Create Movie', class: 'btn btn-lg btn-primary' %>
<% end %>
</div>