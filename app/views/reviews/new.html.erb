<h2> Write Review for <%= @movie.title %> </h2>
<%= render 'shared/errors', object: @review %>
<%= form_for([@movie, @review]) do |f| %>
	<div class = "form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class = "form-group">
		<%= f.label :stars %>
		<%= f.select :stars, Review::STARS, prompt: 'Select one', class: 'form-control'  %>
	</div>
	<div class = "form-group">
		<%= f.label :comment %>
		<%= f.text_area :comment, rows: 4, placeholder: 'What did you think?', class: 'form-control' %>
	</div>
<%= f.submit 'Post Review' %>
<% end %>

